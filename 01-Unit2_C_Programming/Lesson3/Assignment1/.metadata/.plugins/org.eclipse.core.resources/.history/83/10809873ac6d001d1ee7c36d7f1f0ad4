#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num1,num2;
	float num3,num4;
//EX1
	printf("C Programming\n");
	printf("########################################################################\n");
	//-----------------------------------------------------------------------------------
//EX2
	printf("Enter a integer: ");
	fflush(stdout);
	scanf("%d",&num1);
	printf("You entered: %d\n",num1);
	printf("########################################################################\n");
	//-----------------------------------------------------------------------------------
//EX3
	printf("Enter 2 integer Numbers: ");
	fflush(stdout);
	scanf("%d%d",&num1,&num2);
	printf("Sum = %d\n",num1+num2);
	printf("########################################################################\n");
	//-----------------------------------------------------------------------------------
//EX4
	printf("Enter 2  Numbers: ");
	fflush(stdout);
	scanf("%f%f",&num3,&num4);
	printf("Product = %d\n",num3*num4);
	printf("########################################################################\n");
	//-----------------------------------------------------------------------------------
//EX5
	return EXIT_SUCCESS;
}
