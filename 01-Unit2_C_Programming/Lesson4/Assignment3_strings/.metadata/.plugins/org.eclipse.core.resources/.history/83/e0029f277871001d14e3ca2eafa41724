#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
	char data_string[100]={0} , ch ,ch1 , ch2;
	char str1[100],str2[100];
	int i = 0 , j , count = 0;
	printf("Enter a string: ");
	fflush(stdout);  fflush(stdin);
	gets(str1);
	for(i =  strlen(str1)-2 ; i >= 0 ; i--)
	{
		str2[j] = str1[i];
		printf("%c\n",str2[j]);
		j++;
	}
	str2[j] = 0 ;
	printf("Reverse string is : %s",str2);
	return EXIT_SUCCESS;
}
